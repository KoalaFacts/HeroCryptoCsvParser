{
	"$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineEnding": "lf"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "warn",
				"noUnknownAtRules": "off",
				"useIterableCallbackReturn": "off",
				"noArrayIndexKey": "warn"
			},
			"style": {
				"noNonNullAssertion": "warn"
			},
			"complexity": {
				"noForEach": "off"
			},
			"a11y": {
				"useButtonType": "warn",
				"noSvgWithoutTitle": "warn",
				"noLabelWithoutControl": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"json": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab"
		},
		"linter": {
			"enabled": true
		}
	}
}
