{
  "name": "koalafacts",
  "version": "1.0.0",
  "private": true,
  "description": "Universal cryptocurrency transaction parser monorepo with core library and demo",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=packages/core && npm run build --workspace=packages/demo",
    "dev": "npm run dev --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "biome check .",
    "lint:errors": "biome check . --diagnostic-level=error",
    "lint:fix": "biome check . --write",
    "format": "biome format . --write",
    "format:check": "biome format .",
    "test": "npm run test --workspace=packages/core",
    "test:coverage": "npm run test:coverage --workspace=packages/core",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "demo": "npm run dev --workspace=packages/demo",
    "demo:build": "npm run build --workspace=packages/demo",
    "demo:preview": "npm run preview --workspace=packages/demo"
  },
  "keywords": [
    "cryptocurrency",
    "cryptocurrency transaction parser",
    "cryptocurrency tax reporting"
  ],
  "author": "KoalaFacts",
  "license": "MIT",
  "homepage": "https://github.com/KoalaFacts/hero-crypto-csv-parser#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KoalaFacts/hero-crypto-csv-parser.git"
  },
  "bugs": {
    "url": "https://github.com/KoalaFacts/hero-crypto-csv-parser/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/node": "^24.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
